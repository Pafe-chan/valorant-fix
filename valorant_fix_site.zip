from zipfile import ZipFile

# HTMLの中身
html_content = """<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>VALORANTが真っ暗で落ちるときの対処法</title>
  ...
  <!-- 中略：前に渡したHTML本体をここに貼ってOK！ -->
</body>
</html>
"""

# ファイル保存
with open("valorant_fix.html", "w", encoding="utf-8") as f:
    f.write(html_content)

# ダミー画像を作る（本物の画像に置き換えてもOK）
dummy_image_data = b'\x89PNG\r\n\x1a\n' + b'\x00' * 100
with open("vgc-service.png", "wb") as f:
    f.write(dummy_image_data)
with open("dx11-launch.png", "wb") as f:
    f.write(dummy_image_data)
with open("event-viewer.png", "wb") as f:
    f.write(dummy_image_data)

# ZIP作成
with ZipFile("valorant_fix_site.zip", "w") as zipf:
    zipf.write("valorant_fix.html")
    zipf.write("vgc-service.png")
    zipf.write("dx11-launch.png")
    zipf.write("event-viewer.png")

print("✅ ZIPファイルが作成されました！")
